{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "target": "ESNext",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "paths": {
      "*": ["*", "../node_modules/*"]
    },
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
  },
  "include": ["next-env.d.ts", "**/*.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"],
}